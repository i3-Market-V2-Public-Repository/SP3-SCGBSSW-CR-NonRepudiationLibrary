{
  "name": "my-package-name",
  "version": "0.9.0",
  "description": "My package is wonderful",
  "keywords": [
    "keyword1",
    "keyword2"
  ],
  "license": "MIT",
  "author": {
    "name": "My name",
    "email": "email@myemaildomain.com"
  },
  "repository": "repoprovider:username/my-package-name",
  "main": "./dist/index.node.cjs.js",
  "browser": "./dist/index.browser.mod.js",
  "module": "./dist/index.node.esm.js",
  "types": "./dist/index.d.ts",
  "directories": {
    "build": "./build",
    "dist": "./dist",
    "src": "./src",
    "templates": "./templates",
    "test": "./testing/tests"
  },
  "scripts": {
    "clean": "rimraf .nyc_output coverage dist testing/.tests",
    "test:browser": "node testing/browser/index.js",
    "pretest:node": "npx tsc -t ESNEXT --lib esnext -m commonjs --esModuleInterop false --outDir testing/.tests --inlineSourceMap testing/tests/*.ts",
    "test:node": "nyc --check-coverage mocha testing/tests/**/*.js testing/.tests/**/*.js",
    "posttest:node": "rimraf testing/.tests",
    "test": "run-s test:*",
    "coverage": "nyc report --reporter=lcov",
    "build:js": "rollup -c build/rollup.config.js",
    "postbuild:js": "node build/build.dts.js",
    "standard": "ts-standard --fix",
    "docs": "node build/build.docs.js",
    "build": "run-s build:js standard docs",
    "preversion": "npm run build && npm run test",
    "postversion": "git push"
  },
  "ts-standard": {
    "env": [
      "mocha"
    ],
    "globals": [
      "IS_BROWSER",
      "browser",
      "page"
    ],
    "project": "./tsconfig.json",
    "ignore": [
      "/dist/**/*",
      "/types/index.d.ts",
      "/typings/is-browser.d.ts"
    ]
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-multi-entry": "^4.0.0",
    "@rollup/plugin-node-resolve": "^11.1.0",
    "@rollup/plugin-replace": "^2.3.4",
    "@rollup/plugin-typescript": "^8.0.0",
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.2.0",
    "chai": "^4.2.0",
    "jsdoc-to-markdown": "^6.0.1",
    "mocha": "^8.2.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "puppeteer": "^6.0.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.38.1",
    "rollup-plugin-terser": "^7.0.2",
    "source-map-support": "^0.5.19",
    "strip-json-comments": "^3.1.1",
    "ts-standard": "^10.0.0",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "jose": "^3.5.4"
  }
}
