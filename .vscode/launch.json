  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug my tests in node.js",
      "request": "launch",
      "runtimeArgs": [
        "run",
        "test:node"
      ],
      "runtimeExecutable": "npm",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "pwa-node"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Rollup",
      "program": "${workspaceFolder}/node_modules/.bin/rollup",
      "args": [
        "-c",
        "${workspaceFolder}/build/rollup.config.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "TypeScript",
      "program": "${workspaceFolder}/src/index.ts",
      "preLaunchTask": "npm: build:js",
      "outFiles": [
        "${workspaceFolder}/dist/index.node.cjs.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "JavaScript",
      "program": "${workspaceFolder}/src/index.js",
      "preLaunchTask": "npm: build:js",
      "outFiles": [
        "${workspaceFolder}/dist/index.node.cjs.js"
      ]
    }
  ]
}