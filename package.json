{
  "name": "my-package-name",
  "version": "0.9.0",
  "description": "My package is wonderful",
  "keywords": [
    "keyword1",
    "keyword2"
  ],
  "license": "MIT",
  "author": {
    "name": "My name",
    "email": "email@myemaildomain.com"
  },
  "repository": "repoprovider:username/my-package-name",
  "main": "./dist/index.node.cjs.js",
  "browser": "./dist/index.browser.mod.js",
  "module": "./dist/index.node.esm.js",
  "types": "./types/index.d.ts",
  "directories": {
    "build": "./build",
    "dist": "./dist",
    "src": "./src",
    "templates": "./templates",
    "test": "./testing/tests"
  },
  "scripts": {
    "test": "nyc --include dist/index.node.cjs.js --check-coverage mocha testing/bootstrap.js --recursive testing/tests",
    "coverage": "nyc --include dist/index.node.cjs.js report --reporter=lcov",
    "build:js": "rollup -c build/rollup.config.js",
    "postbuild:js": "node build/build.dts.js",
    "standard": "ts-standard --fix",
    "docs": "node build/build.docs.js",
    "build": "run-s build:js standard docs",
    "preversion": "npm run build && npm run test",
    "postversion": "git push"
  },
  "ts-standard": {
    "env": [
      "mocha"
    ],
    "globals": [
      "IS_BROWSER",
      "browser",
      "page"
    ],
    "project": "./tsconfig.json",
    "ignore": [
      "/testing/tests/browser/",
      "/dist/index.browser.bundle.iife.js",
      "/dist/index.browser.bundle.mod.js",
      "/types/index.d.ts"
    ]
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-multi-entry": "^4.0.0",
    "@rollup/plugin-node-resolve": "^11.1.0",
    "@rollup/plugin-replace": "^2.3.4",
    "@rollup/plugin-typescript": "^8.0.0",
    "chai": "^4.2.0",
    "jsdoc-to-markdown": "^6.0.1",
    "lodash": "^4.17.20",
    "mocha": "^8.2.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "puppeteer": "^5.5.0",
    "rollup": "^2.38.1",
    "rollup-plugin-terser": "^7.0.2",
    "strip-json-comments": "^3.1.1",
    "ts-standard": "^10.0.0",
    "tslib": "^2.1.0",
    "typescript": "^4.1.3"
  },
  "dependencies": {}
}
