{
  "name": "my-package-name",
  "version": "0.9.0",
  "description": "My package is wonderful",
  "keywords": [
    "keyword1",
    "keyword2"
  ],
  "license": "MIT",
  "author": {
    "name": "My name",
    "email": "email@myemaildomain.com"
  },
  "repository": "repoprovider:username/my-package-name",
  "main": "./dist/index.node.cjs.js",
  "browser": "./dist/index.browser.mod.js",
  "module": "./dist/index.node.esm.js",
  "types": "./dist/index.d.ts",
  "directories": {
    "build": "./build",
    "dist": "./dist",
    "src": "./src",
    "templates": "./templates",
    "test": "./testing/tests"
  },
  "scripts": {
    "clean": "rimraf .nyc_output coverage dist testing/.tests node_modules",
    "_mocha:tsc": "tsc -p testing ",
    "_mocha:js": "mocha --watch-files testing/.tests,dist/index.d.ts 'testing/.tests/**/*.js' ",
    "_mocha:clean": "rimraf testing/.tests",
    "_watch:tsc": "tsc-watch -p testing --onFirstSuccess \"npm run _mocha:js -- --watch\"",
    "watch": "run-s -c _mocha:clean _watch:tsc",
    "test:browser": "node testing/browser/index.js",
    "test:node": "run-s _mocha:tsc _mocha:js _mocha:clean",
    "test": "run-s test:browser test:node",
    "precoverage": "tsc -p testing",
    "coverage": "nyc --check-coverage --reporter=text --reporter=lcov mocha 'testing/.tests/**/*.js'",
    "postcoverage": "npm run _mocha:clean",
    "build:js": "rollup -c build/rollup.config.js",
    "postbuild:js": "node build/build.dts.js",
    "lint": "ts-standard --fix",
    "docs": "node build/build.docs.js",
    "build": "run-s lint build:js docs test:browser coverage",
    "preversion": "npm run build",
    "postversion": "git push"
  },
  "ts-standard": {
    "env": [
      "mocha"
    ],
    "globals": [
      "IS_BROWSER",
      "browser",
      "page"
    ],
    "project": "./tsconfig.json",
    "ignore": [
      "/dist/**/*",
      "/typings/is-browser.d.ts"
    ]
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-multi-entry": "^4.0.0",
    "@rollup/plugin-node-resolve": "^11.1.0",
    "@rollup/plugin-replace": "^2.3.4",
    "@rollup/plugin-typescript": "^8.0.0",
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.2.0",
    "chai": "^4.2.0",
    "jsdoc-to-markdown": "^6.0.1",
    "mocha": "^8.2.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "puppeteer": "^6.0.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.38.1",
    "rollup-plugin-terser": "^7.0.2",
    "ts-standard": "^10.0.0",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "jose": "^3.5.4"
  }
}
