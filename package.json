{
  "name": "my-package-name",
  "version": "0.9.0",
  "description": "My package is wonderful",
  "keywords": [
    "keyword1",
    "keyword2"
  ],
  "license": "MIT",
  "author": {
    "name": "My name",
    "email": "email@myemaildomain.com"
  },
  "repository": "repoprovider:username/my-package-name",
  "main": "./dist/index.node.cjs.js",
  "browser": "./dist/index.browser.mod.js",
  "module": "./dist/index.node.esm.js",
  "types": "./dist/index.d.ts",
  "directories": {
    "build": "./build",
    "dist": "./dist",
    "src": "./src",
    "test": "/test"
  },
  "scripts": {
    "clean": "rimraf .nyc_output coverage dist .tests docs",
    "_tsc:tests": "tsc -b tsconfig.tests.json",
    "_tsc:clean": "rimraf .tests",
    "premocha": "npm run _tsc:tests",
    "mocha": "mocha --require build/testing/node/register-chai.js build/testing/node/mocha-init.js ",
    "postmocha": "npm run _tsc:clean",
    "mocha-watch": "mocha --require build/testing/node/register-chai.js --require build/testing/node/register-ts-watcher.js --watch-files .tests,dist/index.d.ts --watch build/testing/node/mocha-init.js ",
    "watch": "npm run mocha-watch -- '.tests/**/*.js'",
    "test:browser": "node build/testing/browser/index.js",
    "test:node": "npm run mocha -- '.tests/**/*.js'",
    "test": "run-s test:browser test:node",
    "precoverage": "npm run _tsc:tests",
    "coverage": "nyc --check-coverage --exclude build/**/*.js --exclude **/*.spec.{js,ts} --exclude test/**/*.{js,ts} --reporter=text --reporter=lcov mocha --require build/testing/node/register-chai.js build/testing/node/mocha-init.js '.tests/**/*.js'",
    "postcoverage": "npm run _tsc:clean",
    "prebuild:js": "link-module-alias",
    "build:js": "rollup -c build/rollup.config.js",
    "postbuild:js": "node build/build.dts.js",
    "lint": "ts-standard --fix",
    "docs": "node build/build.docs.js",
    "build": "run-s lint build:js docs test:browser coverage",
    "preversion": "npm run build",
    "postversion": "git push"
  },
  "ts-standard": {
    "env": [
      "mocha"
    ],
    "globals": [
      "IS_BROWSER",
      "browser",
      "page"
    ],
    "project": "./tsconfig.json",
    "ignore": [
      "/dist/**/*"
    ]
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-multi-entry": "^4.0.0",
    "@rollup/plugin-node-resolve": "^11.1.0",
    "@rollup/plugin-replace": "^2.3.4",
    "@rollup/plugin-typescript": "^8.0.0",
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.2.0",
    "chai": "^4.2.0",
    "link-module-alias": "^1.2.0",
    "mocha": "^8.2.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "puppeteer": "^7.0.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.38.1",
    "rollup-plugin-terser": "^7.0.2",
    "ts-standard": "^10.0.0",
    "typedoc": "^0.20.23",
    "typedoc-plugin-markdown": "^3.4.5",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "jose": "^3.5.4"
  },
  "_moduleAliases": {
    "~root": "."
  }
}
