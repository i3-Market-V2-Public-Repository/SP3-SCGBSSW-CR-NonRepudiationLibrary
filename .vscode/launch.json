{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach by Process ID",
      "processId": "${command:PickProcess}",
      "request": "attach",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "pwa-node"
    },
    {
      "name": "Attach",
      "port": 9229,
      "request": "attach",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "pwa-node"
    },
    {
      "args": [
        "--timeout",
        "999999",
        "-r",
        "${workspaceFolder}/build/testing/node/mocha-bootstrap.js",
        "${workspaceFolder}/test/echo.ts"
      ],
      "internalConsoleOptions": "openOnSessionStart",
      "name": "Mocha Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "pwa-node"
    },
    {
      "name": "Debug my tests in node.js",
      "request": "launch",
      "runtimeArgs": [
        "run",
        // "test:node"
        "_mocha:watch"
      ],
      "runtimeExecutable": "npm",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "pwa-node"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Rollup",
      "program": "${workspaceFolder}/node_modules/.bin/rollup",
      "args": [
        "-c",
        "${workspaceFolder}/build/rollup.config.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "TypeScript",
      "program": "${workspaceFolder}/src/index.ts",
      "preLaunchTask": "npm: build:js",
      "outFiles": [
        "${workspaceFolder}/dist/index.node.cjs.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "JavaScript",
      "program": "${workspaceFolder}/src/index.js",
      "preLaunchTask": "npm: build:js",
      "outFiles": [
        "${workspaceFolder}/dist/index.node.cjs.js"
      ]
    }
  ]
}